<% if @comment.errors.any? %>
    <h2>The following errors prevented the comment from getting created</h2>
    
    <div class="alert alert-danger" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <p><%= @comment.errors.full_messages.length %> errors prohibited this comment from being saved</p>
        <% @comment.errors.full_messages.each do |msg| %>
            <p>&emsp;
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <%= msg %>
            </p>
        <% end %>
    </div>
<% end %>

<%= form_for(@comment, :html => {role: "form"}) do |f| %>
        <%= f.label :body %><br>
        <%= f.text_area :body, rows: 4, class: "textarea form-control", placeholder: "Comment body", autofocus: true %>
        <hr>
        <%= f.submit class: "btn btn-primary"%>
        <%= link_to "Back to posts", post_path(@comment.commentable), class: 'btn btn-sm float-right' %>
<% end %>