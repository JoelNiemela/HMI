<% if @user.errors.any? %>
    <h2>The following errors prevented the user from getting created</h2>
    
    <div class="alert alert-danger" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <p><%= @user.errors.full_messages.length %> errors prohibited this user from being saved</p>
        <% @user.errors.full_messages.each do |msg| %>
            <p>&emsp;
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <%= msg %>
            </p>
        <% end %>
    </div>
<% end %>

<%= form_for(@user, :html => {role: "form"}) do |f| %>
    <div>
        <%= f.label :username %><br>
        <%= f.text_field :username, class: "input", placeholder: "Enter username", autofocus: true %>   
    </div>
    <div>
        <%= f.label :email %><br>
        <%= f.email_field :email, class: "input", placeholder: "Enter email", autofocus: true %>
    </div>
    <div>
        <%= f.label :password %><br>
        <%= f.password_field :password, class: "input", placeholder: "Enter password", autofocus: true %>   
    </div>
    <div>
        <%= f.label :description %> <small>(optional)</small><br>
        <%= f.text_area :description, class: "textarea", placeholder: "Enter description", autofocus: true, rows: 4 %>   
    </div>
    <hr>
    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary") %>
    <%= link_to 'Cancel', @user.new_record? ? root_path : user_path(@user), class: 'btn' %>
    <%= link_to "Back to users listing", users_path, class: 'btn btn-sm float-right' %>
    <% if @user.new_record? then %>
        <hr>
        Already have an account?
        &nbsp;&nbsp;
        <%= link_to "Login", login_path, class: 'btn btn-primary' %>
    <% end %>
<% end %>  