<% if @post.errors.any? %>
    <h2>The following errors prevented the post from getting created</h2>
    
    <div class="alert alert-danger" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <p><%= @post.errors.full_messages.length %> errors prohibited this post from being saved</p>
        <% @post.errors.full_messages.each do |msg| %>
            <p>&emsp;
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <%= msg %>
            </p>
        <% end %>
    </div>
<% end %>

<%= form_for(@post, :html => {role: "form"}) do |f| %>
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "input form-control", placeholder: "Title", autofocus: true %>   
        <br>
        <%= f.label :body %><br>
        <%= f.text_area :body, rows: 10, class: "textarea form-control", placeholder: "Post body", autofocus: true %>
        <br>
        <%= f.label :tags %><br>
        <%= f.text_field :tags, value: @post.tags.join(","), class: "input form-control", placeholder: "Tags (commma seperated)", autofocus: true %>
        <hr>
        <%= f.submit class: "btn btn-primary"%>
        <%= link_to "Back to posts listing", posts_path, class: 'btn btn-sm float-right' %>
<% end %>  